<form class="mt-5 border border-dark border-2 py-3 px-3" action="/edit/<%= product.id %>?_method=put " method="post">
    <h1 class="text-success">Edit Product</h1>
    <div class="form-group mt-2">
        <label for="productCode">Product Code</label>
        <input type="text" value="<%= product.productCode %> " class="form-control w-auto me-3" name="productCode" id="productCode">
    </div>
    <div class="form-group mt-1">
        <label for="description">Description</label>
        <input type="text" value="<%= product.description %> " class="form-control w-auto me-3" name="description" id="description">
    </div>
    <div class="form-group mt-1">
        <label for="price">Prix</label>
        <input type="text" value="<%= product.price %> " class="form-control w-auto me-3" name="price" id="price">
    </div>
    <div class="form-group mt-1 text-center">
        <input id="soumettre" type="submit" value="Update Product" class="w-auto btn btn-success btn-lg btn mt-2 border border-dark border-2 text-white "/>
    </div>
</form>