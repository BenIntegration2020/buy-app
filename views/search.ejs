
<section class="row">
  <div class="col-lg-5 col-sm-11 me-1">
    <form class="mt-3" action="/searchProduct" method="get">
      <h1 class="text-nowrap text-success mt-1 pe-5 offset-1 ">Search Product</h1>
      <label for="price" class="fw-bold offset-1 text-nowrap">Entrer le code du produit</label>
      <input type="text" placeholder="Product Code" class="form-control w-auto mt-1 offset-1" name="productCode" id="productCode"/>
      <input id="soumettre" type="submit" value="Search in Database" class="offset-1 w-auto btn btn-lg btn border border-dark border-2 text-white btn-success my-3"/>
    </form>
  </div>
<% if (productCode) { %>
<div class="col-lg-6 col-10 mt-4 ms-5">
  <hr class="bg-dark border border-2 border-dark">
  <h2 class="text-dark text-decoration-underline">Search results:</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Product Code</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= productCode %></td>
      <td><%= description %></td>
      <td><%= price %></td>
    </tr>

    <tr></tr>
  </tbody>
</table>
</div>
  </section>
<% } %>
