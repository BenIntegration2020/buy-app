<h1>Search Product</h1>
<div class="container">
<form
  class="offset-1 mt-5 row border border-dark border-2 py-3"
  action="/searchProduct"
  method="get"
>
  <div class="form-group col-12">
    <div class="row justify-content-center">
      <input
        type="text"
        placeholder="Product Code"
        class="form-control w-auto me-3"
        name="productCode"
        id="productCode"
      />
    </div>
    <div class="row justify-content-center">
      <input
        id="soumettre"
        type="submit"
        value="Search in Database"
        class="w-auto btn btn-success btn-sm mt-2"
      />
    </div>
  </div>
</form>

<% if (productCode) { %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Product Code</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= productCode %></td>
      <td><%= description %></td>
      <td><%= price %></td>
    </tr>

    <tr></tr>
  </tbody>
</table>

<% } %>
</div>