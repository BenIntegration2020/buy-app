<table
  id="productTable"
  class="table display table-bordered border border-dark border-2 m-3"
>
  <thead class="table-dark">
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Price</th>
      <th>Edit / Delete</th>
    </tr>
  </thead>
  <tbody class="table-hover">
    <% products.forEach((product)=> { %>
    <tr>
      <td><%= product.productCode %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td>
        <form action="/edit/<%= product._id %> " style="display: inline">
          <button type="submit" class="btn bg-success">Edit</button>
        </form>
        <form style="display: inline" action="/delete/<%= product.id %>?_method=delete " method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
